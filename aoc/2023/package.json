{
  "name": "aoc2023",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --write \"./**/*.{js,ts,css,html,json}\"",
    "lint": "eslint . --ext .js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@lit-labs/motion": "^1.0.6",
    "lit": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-lit": "^1.10.1",
    "prettier": "^3.1.0",
    "vite": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:lit/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true
  }
}
